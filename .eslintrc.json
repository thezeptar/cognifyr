{
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": ["@typescript-eslint"],
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-extra-parens": "error",
        "no-unexpected-multiline": "error",
        "accessor-pairs": [
            "error",
            {
                "getWithoutSet": false,
                "setWithoutGet": true
            }
        ],
        "block-scoped-var": "warn",
        "dot-location": [
            "warn",
            "property"
        ],
        "dot-notation": "warn",
        "eqeqeq": [
            "error",
            "smart"
        ],
        "guard-for-in": "warn",
        "no-alert": "error",
        "no-caller": "error",
        "no-case-declarations": "warn",
        "no-div-regex": "warn",
        "no-empty": "off",
        "no-empty-pattern": "warn",
        "no-eq-null": "warn",
        "no-eval": "error",
        "no-extend-native": "error",
        "no-extra-bind": "warn",
        "no-floating-decimal": "warn",
        "no-implicit-coercion": [
            "warn",
            {
                "boolean": true,
                "number": true,
                "string": true
            }
        ],
        "no-implied-eval": "error",
        "no-iterator": "error",
        "no-labels": "warn",
        "no-lone-blocks": "warn",
        "no-loop-func": "error",
        "no-multi-spaces": "error",
        "no-multi-str": "warn",
        "no-native-reassign": "error",
        "no-new-func": "error",
        "no-new-wrappers": "error",
        "no-new": "error",
        "no-octal-escape": "error",
        "no-param-reassign": "error",
        "no-proto": "error",
        "no-redeclare": "error",
        "no-script-url": "error",
        "no-self-compare": "error",
        "no-throw-literal": "error",
        "no-useless-call": "error",
        "no-useless-concat": "error",
        "no-void": "warn",
        "no-with": "warn",
        "radix": "warn",
        "vars-on-top": "error",
        "wrap-iife": [
            "error",
            "outside"
        ],
        "yoda": "error",
        "strict": [
            "error",
            "never"
        ],
        "init-declarations": [
            "error",
            "always"
        ],
        "no-inner-declarations": "off",
        "no-catch-shadow": "warn",
        "no-delete-var": "error",
        "no-label-var": "error",
        "no-shadow-restricted-names": "error",
        "no-shadow": "warn",
        "no-undef-init": "off",
        "no-undef": "error",
        "no-undefined": "off",
        "no-unused-vars": "warn",
        "no-use-before-define": "error",
        "callback-return": [
            "warn",
            [
                "callback",
                "next"
            ]
        ],
        "global-require": "error",
        "handle-callback-err": "warn",
        "no-mixed-requires": "warn",
        "no-new-require": "error",
        "no-path-concat": "error",
        "no-process-exit": "error",
        "no-restricted-modules": "off",
        "arrow-parens": [
            "error",
            "always"
        ],
        "constructor-super": "error",
        "no-class-assign": "error",
        "no-const-assign": "error",
        "no-constant-condition": "off",
        "no-dupe-class-members": "error",
        "no-this-before-super": "error",
        "no-var": "warn",
        "object-shorthand": [
            "warn",
            "always"
        ],
        "prefer-arrow-callback": "warn",
        "prefer-spread": "warn",
        "prefer-template": "warn",
        "require-yield": "error",
        "brace-style": [
            "warn",
            "1tbs",
            {
                "allowSingleLine": true
            }
        ],
        "camelcase": "warn",
        "comma-style": [
            "warn",
            "last"
        ],
        "consistent-this": [
            "warn",
            "self"
        ],
        "array-element-newline": [
            "error",
            "never"
        ],
        "eol-last": "warn",
        "func-names": "warn",
        "func-style": [
            "warn",
            "declaration"
        ],
        "indent": [
            "error",
            4
        ],
        "jsx-quotes": [
            "warn",
            "prefer-double"
        ],
        "linebreak-style": [
            "warn",
            "unix"
        ],
        "lines-around-comment": [
            "warn",
            {
                "beforeBlockComment": true,
                "allowBlockStart": true
            }
        ],
        "max-nested-callbacks": [
            "warn",
            8
        ],
        "new-parens": "warn",
        "no-array-constructor": "warn",
        "no-bitwise": "off",
        "no-continue": "off",
        "no-inline-comments": "off",
        "no-lonely-if": "warn",
        "no-mixed-spaces-and-tabs": "error",
        "no-multiple-empty-lines": "warn",
        "no-negated-condition": "off",
        "no-nested-ternary": "warn",
        "no-new-object": "warn",
        "no-plusplus": "off",
        "no-spaced-func": "warn",
        "no-ternary": "off",
        "no-trailing-spaces": "warn",
        "no-underscore-dangle": "warn",
        "no-unneeded-ternary": "warn",
        "one-var": "off",
        "operator-linebreak": [
            "warn",
            "after"
        ],
        "padded-blocks": [
            "warn",
            "never"
        ],
        "quotes": [
            "warn",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "sort-vars": "off",
        "wrap-regex": "warn"
    }
}
